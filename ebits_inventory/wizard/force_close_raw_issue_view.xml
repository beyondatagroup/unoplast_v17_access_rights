<odoo>
        <record id="force_close_raw_issue_wizard" model="ir.ui.view">
            <field name="name">Force Close Raw Issue Wizard</field>
            <field name="model">force.close.raw.issue.wizard</field>
            <field name="arch" type="xml">
                <form string="Force Close">
                    <group>
                        <field name="reason"/>
                    </group>
                    <footer>
                        <button name="action_close" string="Force Close" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        
