        <record id="action_picking_tree" model="ir.actions.act_window">
            <field name="name">Transfers</field>
            <field name="res_model">stock.picking</field>
            <field name="type">ir.actions.act_window</field>
            <!-- <field name="view_type">form</field> -->
            <field name="view_mode">tree,kanban,form,calendar</field>
            <field name="domain">[('to_refund', '!=', True),('to_refund_po', '!=', True)]</field>
            <field name="context">{
                    'search_default_picking_type_id': [active_id],
                    'default_picking_type_id': active_id,
                    'contact_display': 'partner_address',
            }
            </field>
            <field name="search_view_id" ref="stock.view_picking_internal_search"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a stock operation.
              </p><p>
                Most operations are prepared automatically by Odoo according
                to your preconfigured logistics rules, but you can also record
                manual stock movements.
              </p>
            </field>
        </record>

        <record id="action_picking_form" model="ir.actions.act_window">
            <field name="name">New Transfer</field>
            <field name="res_model">stock.picking</field>
            <field name="type">ir.actions.act_window</field>
            <!-- <field name="view_type">form</field> -->
            <field name="view_mode">form</field>
            <field name="domain">[('to_refund', '!=', True),('to_refund_po', '!=', True)]</field>
            <field name="context">{
                    'search_default_picking_type_id': [active_id],
                    'default_picking_type_id': active_id,
                    'contact_display': 'partner_address',
            }
            </field>
            <field name="search_view_id" ref="stock.view_picking_internal_search"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click here to create a new transfer.
              </p><p>
                You can either do it immediately or mark it as Todo for future processing. Use your scanner to validate the transferred quantity quicker.
              </p>
            </field>
        </record>
        
        <record id="view_picking_internal_search_inherit" model="ir.ui.view">
            <field name="name">stock.picking.internal.search</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_internal_search"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="before">
                    <separator/>
                    <filter name="salereturnapproval" string="Sales Return To Be Sent For Approval" domain="[('to_refund', '=', True),('refund_sent_approval', '!=', True)]"/>
                    <filter name="salereturnpending" string="Sales Return To Be Approved" domain="[('to_refund', '=', True),('refund_sent_approval', '=', True),('refund_approved', '!=', True)]"/>
                    <filter name="salereturnapproved" string="Sales Return To Be Received" domain="[('to_refund', '=', True),('refund_sent_approval', '=', True),('refund_approved', '=', True),('state', '!=', 'done')]"/>
                </field>
            </field>
        </record>
        
        <record id="action_picking_return_tree_all" model="ir.actions.act_window">
            <field name="name">Sale Returns</field>
            <field name="res_model">stock.picking</field>
            <field name="type">ir.actions.act_window</field>
            <!-- <field name="view_type">form</field> -->
            <field name="view_mode">tree,kanban,form,calendar</field>
            <field name="domain">[('to_refund', '=', True)]</field>
            <field name="context">{
                    'contact_display': 'partner_address', 'default_to_refund': True
            }
            </field>
            <field name="search_view_id" ref="view_picking_internal_search_inherit"/>
        </record>
        
        <record id="action_picking_po_return_tree_all" model="ir.actions.act_window">
            <field name="name">Purchase Returns</field>
            <field name="res_model">stock.picking</field>
            <field name="type">ir.actions.act_window</field>
            <!-- <field name="view_type">form</field> -->
            <field name="view_mode">tree,kanban,form,calendar</field>
            <field name="domain">[('to_refund_po', '=', True)]</field>
            <field name="context">{
                    'contact_display': 'partner_address', 'default_to_refund_po': True
            }
            </field>
            <field name="search_view_id" ref="view_picking_internal_search_inherit"/>
        </record>
        
        <menuitem id="menu_picking_sale_return_root" name="Sale Return" parent="stock.menu_stock_root" sequence="2"/>
        
        <menuitem id="menu_picking_sale_return_all" name="Sale Return" parent="menu_picking_sale_return_root" sequence="1" action="action_picking_return_tree_all"/>
        
        <menuitem id="menu_picking_purchase_return_root" name="Purchase Return" parent="stock.menu_stock_root" sequence="2"/>
        
        <menuitem id="menu_picking_purchase_return_all" name="Purchase Return" parent="menu_picking_purchase_return_root" sequence="1" action="action_picking_po_return_tree_all"/>
        
        
</odoo>
